{
  "name": "@crowdin/react-crowdin-login-workspace",
  "private": true,
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prettify": "prettier --write './packages/react-crowdin-login/src/**/*.{js,jsx,ts,tsx,json}'"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=20"
  }
}
